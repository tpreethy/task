<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div id="errorExplanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited
            this user from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :Name %>
      <%= f.text_field :name, :placeholder => "full name" %>
    </p>

    <p>
      <%= f.label :Address %>
      <%= f.text_area :address %>
    </p>
    <p>
      <%= f.label :City %>
      <%= f.text_field :city %>
    </p>
    <p>
      <%= f.label :State %>
      <%= f.text_field :state %>
    </p>
    <p>
      <%= f.label :Zip_code %>
      <%= f.text_field :zip_code, :placeholder => "eg. 12345"%>
    </p>
    <p>
      <%= f.label :School %>
      <%= f.text_field :school %>
    </p>
    <p>
      <%= f.label :Years_practice %>
      <%= f.text_field :years_practice, :placeholder => "1..100" %>
    </p>


    <p>
      <%= f.submit %>
    </p>
<% end %>