<%= provide(:title, 'Listing Pets') %>
<h1>Listing Pets</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Breed</th>
    <th>Age</th>
    <th>Weight</th>
    <th>Date of last visit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td> <%= pet.pet_type %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.age %></td>
        <td><%= pet.weight %></td>
        <td><%= pet.dated %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet_path(pet),
                        method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
  <% end %>
</table>
<%= link_to 'New pet', new_pet_path %>
